            <% for(var i=0; i < data.length; i++) { %>
           <tr>
               <td><%=data[i].id%></td>
               <td>
                   <p class="fw-bold mb-1"><%=data[i].name %></p>
               </td>
               <td>
                     <img src="../../../../public/img/<%= data[i].img %>" alt=""
                           style="width: 100px; height: 100px" class="rounded" />    
               </td>
               <td>
                   <span class="badge badge-success rounded-pill d-inline"><%=data[i].price%></span>
               </td>
               <td>
                   <span class="badge badge-success rounded-pill d-inline"><%=data[i].sale_price%></span>
               </td>
               <td>
          
                   <a href="/admin/edit-products/<%=data[i].id%>" class="btn btn-warning" data-mdb-ripple-init ><i class="fa-solid fa-pen-to-square"></i></a>
                   <a href="/admin/products/<%=data[i].id%>" name="id" id="id" class="btn btn-danger" data-mdb-ripple-init value="<%=data[i].id%>"><i class="fa-regular fa-trash-can"></i></a>           
               </td>
           </tr>
           <% } %>