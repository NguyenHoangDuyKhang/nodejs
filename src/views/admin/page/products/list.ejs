<!doctype html>
<html lang="en">

<head>
    <title>Title</title>
    <%- include('../../../../components/head.ejs'); %>
        <link rel="stylesheet" href="../../css/style.css">
</head>

<body>

    <header>
        <%- include('../../components/header.ejs'); %>
    </header>


    <!--Main layout-->

    <main style="margin-top: 58px">
        <div class="container pt-4">
            <!-- <button class="tryMe" id="">Click</button>    -->
            <!--Section: Sales Performance KPIs-->
            <div class="container">
                <div class="row col-lg-12">
                    <div class="col-lg-9">
                        <h4>Danh sách sản phẩm</h4>
                    </div>
                    <div class="col-lg-3">
                        <form class="d-none d-md-flex input-group w-auto my-auto">
                            <input class="tim_kiem" autocomplete="off" type="search" class="form-control rounded"
                              placeholder='Tìm Kiếm...' style="min-width: 225px" />
                            <span class="input-group-text border-0"><i class="fas fa-search"></i></span>
                          </form>
                    </div>
                </div>
            </div>

            <section class="mb-4">
                <table class="table align-middle mb-0 bg-white">
                    <thead class="bg-light">
                        <tr>
                            <th>ID</th>
                            <th>Tên</th>
                            <th>Ảnh</th>
                            <th>Giá</th>
                            <th>Giá giảm</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody class="danhsach">

                         <% for(var i=0; i < data.length; i++) { %>
                        <tr>
                            <td><%=data[i].id%></td>
                            <td>
                                <p class="fw-bold mb-1"><%=data[i].name %></p>
                            </td>
                            <td>
                                  <img src="../../../../public/img/<%= data[i].img %>" alt=""
                                        style="width: 100px; height: 100px" class="rounded" />    
                            </td>
                            <td>
                                <span class="badge badge-success rounded-pill d-inline"><%=data[i].price%></span>
                            </td>
                            <td>
                                <span class="badge badge-success rounded-pill d-inline"><%=data[i].sale_price%></span>
                            </td>
                            <td>
                       
                                <a href="/admin/edit-products/<%=data[i].id%>" class="btn btn-warning tryMe" data-mdb-ripple-init ><i class="fa-solid fa-pen-to-square"></i></a>
                                <a href="/admin/products/<%=data[i].id%>" name="id" class="btn btn-danger tryMe" data-mdb-ripple-init value="<%=data[i].id%>"><i class="fa-regular fa-trash-can"></i></a>
                            </td>
                        </tr>
                        <% } %>
                       
                    </tbody>
                </table>
            </section>
            <div class="row">
                <div class="col-lg-10"></div>
                <div class="col-lg-2 mb-5"><a href="/admin/add-products" class="btn btn-outline-primary" data-mdb-ripple-init data-mdb-ripple-color="dark">+ Thêm</a></div>
            </div>
        </div>
    </main>
    <!--Main layout-->
    <footer>
        <!-- place footer here -->
    </footer>
    <!-- Bootstrap JavaScript Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
        integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
        crossorigin="anonymous"></script>


        <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js" ></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script src="../js/admin.js"></script>
    <script src="../js/search.js"></script>
    <script src="../js/nottification.js"></script>
</body>

</html>