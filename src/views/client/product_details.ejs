<!doctype html>
<html lang="en">

<head>
    <title>Title</title>
    <%- include('./../../components/head.ejs'); %>
</head>

<body>
    <header>
        <%- include('./../../components/header.ejs'); %>
    </header>
    <main>
      <div class="container">
        <div class="col-12 ">
            <div class="card mb-5 mt-5">
                <div class="row g-0">
                  <div class="col-md-4">
                    <img src="../../public/img/<%=data.img%>" class="img-fluid rounded-start">
                  </div>
                  <div class="col-md-8">
                    <div class="card-body">
                      <h5 class="card-title">Tên: <%=data.name %></h5>
                      <p class="card-text"><del class='text-danger'>Giá:  <%=data.price %></del></p>
                      <p class="card-text">Giá giảm:  <%=data.sale_price %></p>
                      <p class="card-text"><small class="text-muted">Mô tẩ chi tiết: <%=data.descripstion %></small></p>
                    </div>
                    <div class="card-footer row">
                          <div class="col-lg-2"> <a  href="/products/<%=data.id%>" class="btn btn-primary col-lg-12" data-mdb-ripple-init>Mua</a></div>
                    </div>
                  </div>
                </div>
              </div>
        </div>
      </div>

    </main>
    <footer>
        <%- include('./../../components/footer.ejs'); %>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
        integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
        crossorigin="anonymous"></script>
</body>
</html>